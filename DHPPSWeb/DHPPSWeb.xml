<uwsgi>
    <socket>:8000</socket><!-- 内部端口，自定义 -->
    <chdir>/root/DHPPS-beta/DHPPSWeb/</chdir><!-- 项目路径 -->
    <module>DHPPSWeb.wsgi</module><!--这是django项目中的wsgi文件，在mysite/mysite目录下-->
    <processes>4</processes> <!-- 进程数 --> 
    <thread>2</thread>
    <daemonize>uwsgi.log</daemonize><!-- 日志文件 -->
    <buffer-size>65536</buffer-size>
    <disable-logging>true</disable-logging>
</uwsgi>